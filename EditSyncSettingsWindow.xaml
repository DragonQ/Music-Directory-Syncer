<Window x:Class="EditSyncSettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:Btl.Controls;assembly=Btl.Controls.MyControls"
    Title="Edit Sync Settings" Width="430" Height="Auto" SizeToContent="WidthAndHeight" ResizeMode="NoResize">
    <Grid Margin="0,0,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <TextBox x:Name="txtSourceDirectory" Height="21" Margin="113,11,86,0" TextWrapping="Wrap" Text="\\192.168.1.99\Audio\Music" VerticalAlignment="Top"/>
        <Button x:Name="btnSave" Content="Save" Margin="0,0,104,10" Click="btnSave_Click" Height="24" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="89"/>
        <Button x:Name="btnCancel" Content="Cancel" Margin="0,0,10,10" Click="btnCancel_Click" Height="24" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="89"/>
        <TextBox x:Name="txtSyncDirectory" Height="21" Margin="113,35,86,0" TextWrapping="Wrap" Text="\\192.168.1.99\Audio\Music test2" VerticalAlignment="Top"/>
        <Label Content="Source Directory:" HorizontalAlignment="Left" Height="26" Margin="0,7,0,0" VerticalAlignment="Top" Width="108" HorizontalContentAlignment="Right"/>
        <Label Content="Sync Directory:" HorizontalAlignment="Left" Height="26" Margin="10,31,0,0" VerticalAlignment="Top" Width="98" HorizontalContentAlignment="Right" RenderTransformOrigin="0.5,0.5"/>
        <Controls:SpinnerControl x:Name="spinThreads" HorizontalAlignment="Left" Margin="113,60,0,0" VerticalAlignment="Top" Minimum="1" Width="49" Value="1"/>
        <Label Content="Threads:" HorizontalAlignment="Left" Height="26" Margin="54,58,0,14" VerticalAlignment="Top" Width="54" HorizontalContentAlignment="Right"/>
        <Button x:Name="btnBrowseSourceDirectory" Content="Browse..." Margin="0,11,10,0" VerticalAlignment="Top" Height="21" TabIndex="1" HorizontalAlignment="Right" Width="71"/>
        <Button x:Name="btnBrowseSyncDirectory" Content="Browse..." Margin="0,35,10,0" VerticalAlignment="Top" Height="21" TabIndex="3" HorizontalAlignment="Right" Width="71"/>
    </Grid>
</Window>
