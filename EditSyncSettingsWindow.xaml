<Window x:Class="EditSyncSettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:Btl.Controls;assembly=Btl.Controls.MyControls"
    Title="Edit Sync Settings" Height="125.333" Width="427.8" ResizeMode="NoResize">
    <Grid Margin="0,0,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <TextBox x:Name="txtSourceDirectory" HorizontalAlignment="Left" Height="21" Margin="113,11,0,0" TextWrapping="Wrap" Text="\\192.168.1.99\Audio\Music" VerticalAlignment="Top" Width="223"/>

        <Button x:Name="btnSave" Content="Save" HorizontalAlignment="Left" Margin="229,63,0,0" VerticalAlignment="Top" Width="89" Click="btnSave_Click" Height="24"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="323,63,0,0" VerticalAlignment="Top" Width="89" Click="btnCancel_Click" Height="24"/>
        <TextBox x:Name="txtSyncDirectory" HorizontalAlignment="Left" Height="21" Margin="113,35,0,0" TextWrapping="Wrap" Text="\\192.168.1.99\Audio\Music test2" VerticalAlignment="Top" Width="223"/>
        <Label Content="Source Directory:" HorizontalAlignment="Left" Height="26" Margin="0,7,0,0" VerticalAlignment="Top" Width="108" HorizontalContentAlignment="Right"/>
        <Label Content="Sync Directory:" HorizontalAlignment="Left" Height="26" Margin="10,31,0,0" VerticalAlignment="Top" Width="98" HorizontalContentAlignment="Right" RenderTransformOrigin="0.5,0.5"/>
        <Controls:SpinnerControl x:Name="spinThreads" HorizontalAlignment="Left" Margin="113,60,0,0" VerticalAlignment="Top" Minimum="1" Width="49" Value="1"/>
        <Label Content="Threads:" HorizontalAlignment="Left" Height="26" Margin="54,58,0,0" VerticalAlignment="Top" Width="54" HorizontalContentAlignment="Right"/>
        <Button x:Name="btnBrowseSourceDirectory" Content="Browse..." HorizontalAlignment="Left" Margin="341,11,0,0" VerticalAlignment="Top" Width="71" Height="21" TabIndex="1"/>
        <Button x:Name="btnBrowseSyncDirectory" Content="Browse..." HorizontalAlignment="Left" Margin="341,35,0,0" VerticalAlignment="Top" Width="71" Height="21" TabIndex="3"/>
    </Grid>
</Window>
